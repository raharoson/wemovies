<div class="list-group">
    {% for movie in movies %}
        

        <a role="option"
            class="list-group-item list-group-item-action"
            href="{{ path('list', { movieId: movie.id }) }}"
        >
            <img src="{{ constant('App\\HttpClient\\Url::POSTER') ~ '/' ~ movie.posterPath }}"/>
            {{ movie.title }}
        </a>
    {% else %}
        <a class="list-group-item" 
            role="option" aria-disabled="true">
            No results found!
        </a>
    {% endfor %}
</div>
